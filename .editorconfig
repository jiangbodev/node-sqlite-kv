# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true

# Set default charset
[*.{js,py,json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab